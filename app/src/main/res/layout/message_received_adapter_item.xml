<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="90dp"
    android:background="@color/colorGreenLight"
    android:layout_marginTop="@dimen/margin_message_box"
    android:layout_marginBottom="@dimen/margin_message_box"
    android:padding="@dimen/margin_message_box"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_author_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteSmoke"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textColor="@color/whiteSmoke" />

    <TextView
        android:id="@+id/tv_message_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:gravity="right" />

</LinearLayout>